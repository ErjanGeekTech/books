<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/booksFragment">

    <fragment
        android:id="@+id/booksFragment"
        android:name="com.example.books.ui.fragments.books.BooksFragment"
        android:label="Books"
        tools:layout="@layout/fragment_books" >
        <action
            android:id="@+id/action_booksFragment_to_descriptionFragment"
            app:destination="@id/descriptionFragment"
            app:enterAnim="@anim/slide_left_anim" />
        <action
            android:id="@+id/action_booksFragment_to_dialogFragment"
            app:destination="@id/dialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/descriptionFragment"
        android:name="com.example.books.ui.fragments.description.DescriptionFragment"
        android:label="Description"
        tools:layout="@layout/fragment_description" >
        <argument
            android:name="books_description"
            app:argType="com.example.books.ui.models.BooksModel" />
    </fragment>
    <fragment
        android:id="@+id/dialogFragment"
        android:name="com.example.books.ui.fragments.dialog.DialogFragment"
        android:label="fragment_dailog"
        tools:layout="@layout/fragment_dailog" >
        <argument
            android:name="dialog_image_books"
            app:argType="integer" />
    </fragment>
</navigation>